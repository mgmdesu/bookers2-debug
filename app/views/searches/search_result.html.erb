  <table class="table table-hover table-inverse">
    <% if @range == "User" %>
    <h2>Users search for "<%= params[:word] %>"</h2>
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
        </tr>
      </tbody>
      <% end %>
      
    <% else %>
    <h2>Books search for "<%= params[:word] %>"</h2>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
      <% end %>
    <% end %>
  </table>