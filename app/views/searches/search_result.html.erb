<h1>Books search for ""</h1>
  <table class="table">
    <% if @range == "User" %>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th></th>
          <th>Name</th>
        </tr>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
        </tr>
        <% end %>
      </tbody>
      
    <% else %>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>